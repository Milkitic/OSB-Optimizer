<Window
    x:Class="OsbOptimizer.NewTaskWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OsbOptimizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewTaskWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:NewTaskWindowVm />
    </Window.DataContext>
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Height="23"
            Margin="6,6,3,6"
            Text="{Binding HoldingPath, Mode=TwoWay}" />
        <Button
            x:Name="BtnBrowse"
            Grid.Row="0"
            Grid.Column="1"
            Width="25"
            Height="26"
            Margin="6"
            Command="{Binding BrowseCommand}"
            Content="..." />
        <Button
            x:Name="BtnOk"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="25"
            Height="26"
            Margin="6"
            Command="{Binding OKCommand}"
            Content="OK" />
    </Grid>
</Window>
